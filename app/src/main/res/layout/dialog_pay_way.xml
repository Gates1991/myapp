<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付宝快捷支付"
        android:textColor="#000"
        android:textSize="20sp"
        android:id="@+id/tv_zfb"/>
    <View
        android:id="@+id/vw_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_zfb"
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:background="#90000000"/>
    <LinearLayout
        android:id="@+id/ll_zh"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/vw_line">
        <TextView
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号:\t 0626 Android"
            android:textColor="#000"
            android:textSize="18sp"/>
        <TextView
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码:\t **************"
            android:textColor="#000"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/ll_zh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:textSize="20sp"
            android:layout_margin="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/iv_cancel"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_pay_cannel"
                android:text="取消"/>

        <Button
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/iv_pay"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_pay"
            android:text="支付"/>

    </LinearLayout>

</RelativeLayout>