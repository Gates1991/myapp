<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_bar"/>
    <RadioGroup
        android:id="@+id/indent_radio"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="13dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >

        <RadioButton
            android:id="@+id/rb_SucessIndent"
            android:background="@drawable/selector_segment1"
            style="@style/main_tab_list"
            android:text="完成订单"
            />
        <RadioButton
            android:id="@+id/rb_UnsucessIndent"
            style="@style/main_tab_list"
            android:background="@drawable/selector_segment2"
            android:text="未完成订单"
             />
        <RadioButton
            android:id="@+id/rb_CancelIndent"
            style="@style/main_tab_list"
            android:background="@drawable/selector_segment3"
            android:text="取消订单"
             />


    </RadioGroup>

   <ListView
       android:layout_margin="15dp"
       android:id="@+id/listview"
       android:dividerHeight="5dp"
       android:divider="@color/white"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
   </ListView>

</LinearLayout>