<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@mipmap/head_bg_home"/>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >


    </ListView>
    <RadioGroup
        android:id="@+id/main_radio"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:paddingTop="2dp"
        android:gravity="center_vertical"
        android:background="@mipmap/bar_bg"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/menu"
            style="@style/main_tab_bottom"
            android:background="@drawable/selector_menu"


           />
        <RadioButton
            style="@style/main_tab_bottom"
            android:background="@drawable/selector_search"

           />
        <RadioButton
            style="@style/main_tab_bottom"
            android:background="@drawable/selector_brand"

           />
        <RadioButton
            style="@style/main_tab_bottom"
            android:background="@drawable/selector_shopping"

            />
        <RadioButton
            style="@style/main_tab_bottom"
            android:background="@drawable/selector_more"

           />
    </RadioGroup>

</LinearLayout>