<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@mipmap/head_bg"
        android:padding="@dimen/title_padding">
        <!--android:background="@drawable/selector_title_left_btn"-->
        <Button
            android:id="@+id/bt_title_left"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/touming"
            android:drawableLeft="@mipmap/goback_mmin"
            android:text="返回"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="主頁"
            android:textSize="22sp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/iv_title_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/bt_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#0000"
            android:drawableRight="@mipmap/cloud_upload"
            android:text="筛选"
            android:textColor="@android:color/white"
            android:visibility="gone"
            />
        <RelativeLayout
            android:id="@+id/rl_sc"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <Button
                android:layout_centerHorizontal="true"
                android:id="@+id/bt_right"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/sc"
                />
            <TextView

                android:id="@+id/tv_sc"
                android:layout_below="@+id/bt_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>


    </RelativeLayout>

</merge>