<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:focusableInTouchMode="true">

    <include layout="@layout/title_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:clickable="true"
                android:gravity="center_vertical"
                android:id="@+id/rl_address"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#229c9c9c">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
                <LinearLayout

                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_marginTop="5dp"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="姓名:"/>
                        <TextView
                            android:layout_marginLeft="100dp"
                            android:id="@+id/tv_telephone"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电话:"/>
                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/tv_address_detial"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="详细地址:"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:clickable="true"
                android:id="@+id/rl_pay_way"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview_65bg_normal">
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                   />
                    <TextView
                        android:textSize="20sp"
                        android:id="@+id/tv_payway"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付方式:"/>
            </RelativeLayout>
            <RelativeLayout
                android:clickable="true"
                android:id="@+id/rl_deliver"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview_65bg_normal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:textSize="20sp"
                    android:id="@+id/tv_deliver_time"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送货时间:"/>
            </RelativeLayout>
            <RelativeLayout
                android:clickable="true"
                android:id="@+id/rl_invoice"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listview_65bg_normal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发票信息"/>
            </RelativeLayout>
            <LinearLayout
            android:background="#229c9c9c"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginTop="6dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发票类型:"
                android:id="@+id/tv_invoice_type"/>
            <TextView
                android:layout_marginTop="6dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发票抬头:"
                android:id="@+id/tv_invoice_rise"/>
            <TextView
                android:layout_marginTop="6dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发票内容:"
                android:id="@+id/tv_invoice_content"/>
        </LinearLayout>
            <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#9c9c9c">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
            <TextView
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用优惠券 新用户现金券10元"/>
        </RelativeLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_deail_shopping">
        </ListView>
     </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="#339c9c9c"
        android:layout_marginTop="10dp">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="应付金额:"
            android:id="@+id/tv_pay_total"/>
        <TextView
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="含运费:"
            android:id="@+id/contain_ship"/>
    </LinearLayout>
        <RelativeLayout
            android:layout_marginRight="7dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView

                android:id="@+id/iv_submit"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shape_shop_remove_big"/>
            <TextView
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交订单"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>